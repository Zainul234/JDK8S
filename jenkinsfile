node {
    stage('SCM')
    {
       git branch: 'main', url: 'https://github.com/Zainul234/JDK8S.git'
    }
     stage('Build') 
   {
      sh 'docker build -t my-project:1.0 .'
   }
   stage('Publish to Docker') 
   {
     // sh 'docker login -u admin -p 1234 localhost:8087'
      sh 'docker tag my-project:1.0 zainulsyed/my-project:1.0'
      sh 'docker push zainulsyed/my-project:1.0'
  }
    stage('K8s') 
   {
     // sh 'kubectl create namespace assignment'
      sh 'kubectl apply -f cicd-deployment.yml'
       sh 'kubectl apply -f cicd-svc.yml'
      sh 'kubectl get deployment -n assignment'
      sh 'kubectl get po'
      //sh 'kubectl describe po cicd'
   }
}

